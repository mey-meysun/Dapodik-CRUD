<script>
  function confirmLogout(event) {
    event.preventDefault(); // Mencegah tautan default
    Swal.fire({
      title: "Apakah Anda yakin?",
      text: "Anda akan logout dari aplikasi.",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Ya, logout",
      cancelButtonText: "Batal",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/logout"; // Arahkan ke rute logout jika dikonfirmasi
      }
    });
  }
</script>
<script>
 function confirmDelete(event, button) {
  event.preventDefault(); // Mencegah pengiriman form langsung

  const nama = button.getAttribute("data-nama"); // Ambil nilai data-nama

  Swal.fire({
    title: "Apakah Anda yakin?",
    text: `Data siswa ${nama} akan dihapus secara permanen!`,
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Ya, hapus!",
    cancelButtonText: "Batal",
  }).then((result) => {
    if (result.isConfirmed) {
      button.closest("form").submit(); // Submit form terkait
    }
  });
}
</script>
