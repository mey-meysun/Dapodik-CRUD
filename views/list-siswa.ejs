<div class="container mt-5 p-3 bg-white shadow-lg">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-2 p-2">
        <h2>Daftar Data Siswa</h2>
        <a href="/siswa/add" class="btn btn-primary btn-md">(+) Tambah Data Siswa</a>
      </div>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success fw-bold" role="alert">
        <%= msg %>
      </div>
      <% } %>

      <div class="table-responsive small mb-5 p-2" id="table">
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Nama</th>
              <th scope="col">Jenis Kelamin</th>
              <th scope="col">NISN</th>
              <th scope="col">NIK</th>
              <th scope="col">No KK</th>
              <th scope="col">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% if (siswas.length === 0) { %>
            <tr>
              <td colspan="7">
                <div class="alert alert-danger fw-bold text-center" role="alert">
                  Data siswa masih kosong.
                </div>
              </td>
            </tr>
            <% } else { %>
            <% siswas.forEach((siswa, i) => { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= siswa.nama %></td>
              <td><%= siswa.jenisKelamin %></td>
              <td><%= siswa.nisn %></td>
              <td><%= siswa.nik %></td>
              <td><%= siswa.nokk %></td>
              <td>
                <a
                  href="/siswa/<%= siswa.nama %>"
                  class="btn btn-success badge rounded-pill"
                >
                  <i class="bi bi-info-circle"></i> Detail
                </a>
              </td>
            </tr>
            <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
